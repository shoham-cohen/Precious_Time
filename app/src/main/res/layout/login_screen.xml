<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".login_screen">

    <TextView
        android:id="@+id/login_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_margin="25dp"
        />

    <EditText
        android:id="@+id/p_e_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_headline"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="#30ffffff"
        android:gravity="center"
        android:hint="Enter your personal number"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/id_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_e_number"
        android:layout_marginTop="26dp"
        android:layout_margin="18dp"
        android:background="#30ffffff"
        android:gravity="center"
        android:hint="Enter your id number"
        android:padding="20dp"
        android:textColorHint="@color/black" />

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/id_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="login" />

</RelativeLayout>